        <!--工联单详情页面-->
        <template id="topodoo_wechat_gld.xiangqing" name="Wechat_XiangQing">
            <t t-call="topodoo_wechat_gld.layout">
                <t t-set="head">
                    <title>工联单详情</title>
                    <!--工联单js-->
                    <!--<script src="/topodoo_wechat_gld/static/src/js/wechat_gld.js"></script>-->
                </t>
                <body class="list_body" id="list_body_div_info" onload="get_gld_info();caozuo_anniu()">
                    <!--数据加载动画-->
                    <div id="loadingToast" class="weui_loading_toast" style="display:none;">
                        <div class="weui_mask_transparent"></div>
                        <div class="weui_toast">
                            <div class="weui_loading">
                                <div class="weui_loading_leaf weui_loading_leaf_0"></div>
                                <div class="weui_loading_leaf weui_loading_leaf_1"></div>
                                <div class="weui_loading_leaf weui_loading_leaf_2"></div>
                                <div class="weui_loading_leaf weui_loading_leaf_3"></div>
                                <div class="weui_loading_leaf weui_loading_leaf_4"></div>
                                <div class="weui_loading_leaf weui_loading_leaf_5"></div>
                                <div class="weui_loading_leaf weui_loading_leaf_6"></div>
                                <div class="weui_loading_leaf weui_loading_leaf_7"></div>
                                <div class="weui_loading_leaf weui_loading_leaf_8"></div>
                                <div class="weui_loading_leaf weui_loading_leaf_9"></div>
                                <div class="weui_loading_leaf weui_loading_leaf_10"></div>
                                <div class="weui_loading_leaf weui_loading_leaf_11"></div>
                            </div>
                            <p class="weui_toast_content">跳转中</p>
                        </div>
                    </div>

                    <div class="huaru_div" id="huaru_div">
                        <div id="daiban_sponar" class="daiban_opinion_t_class">
                            <t t-foreach="gld_obj" t-as="item">
                                <t t-if="(item.state=='draft' and curr_approver_is_luser==True)">
                                    <div class="huaru_div_" onclick="gld_state_sent()">
                                        <img src='/topodoo_wechat_gld/static/src/img/tjsp_tubiao.png'
                                             class='aligncenter tubiao'/>
                                        <span class="huaru_div_span">提交审批</span>
                                    </div>
                                </t>
                                <t t-if="(item.state=='pending' or item.state=='pass')">
                                    <div class="huaru_div_" onclick="view_appr(1)">
                                        <img src='/topodoo_wechat_gld/static/src/img/tjspr_tubiao.png'
                                             class='aligncenter tubiao'/>
                                        <span class="huaru_div_span">添加审批人</span>
                                    </div>
                                </t>
                                <t t-if="(item.state=='pending' and curr_approver_is_luser==True)">
                                    <div class="huaru_div_" onclick="gld_state_draft()">
                                        <img src='/topodoo_wechat_gld/static/src/img/zh_tubiao.png'
                                             class='aligncenter tubiao'/>
                                        <span class="huaru_div_span">追回</span>
                                    </div>
                                </t>
                                <t t-if="(item.state=='through' and curr_approver_is_luser==True)">
                                    <div class="huaru_div_" onclick="gld_finish_to_pass()">
                                        <img src='/topodoo_wechat_gld/static/src/img/jxsp_tubiao.png'
                                             class='aligncenter tubiao'/>
                                        <span class="huaru_div_span">继续审批</span>
                                    </div>
                                </t>
                                <t id="zf"
                                   t-if="(item.state=='pending' or item.state=='pass') and (curr_approver_is_luser==True)">
                                    <div id="zf_div" class="huaru_div_" onclick="gld_state_cancel()">
                                        <img src='/topodoo_wechat_gld/static/src/img/zf_tubiao.png'
                                             class='aligncenter tubiao'/>
                                        <span class="huaru_div_span">作废</span>
                                    </div>
                                </t>
                                <t t-if="(item.state!='n_through' or item.state!='cancel')">
                                    <div class="huaru_div_" onclick="view_appr(2)">
                                        <img src='/topodoo_wechat_gld/static/src/img/cs_tubiao.png'
                                             class='aligncenter tubiao'/>
                                        <span class="huaru_div_span">抄送</span>
                                    </div>
                                </t>
                                <t t-if="(item.state=='pending' or item.state=='pass') and (uid_is_approval==True)">
                                    <div class="huaru_div_" onclick="tongyi()">
                                        <img src='/topodoo_wechat_gld/static/src/img/ty_tubiao.png'
                                             class='aligncenter tubiao'/>
                                        <span class="huaru_div_span">同意</span>
                                    </div>
                                    <div class="huaru_div_" onclick="butongyi()">
                                        <img src='/topodoo_wechat_gld/static/src/img/bty_tubiao.png'
                                             class='aligncenter tubiao'/>
                                        <span class="huaru_div_span">不同意</span>
                                    </div>
                                    <div class="huaru_div_" onclick="waiver()">
                                        <img src='/topodoo_wechat_gld/static/src/img/bzzqfw_tubiao.png'
                                             class='aligncenter tubiao'/>
                                        <span class="huaru_div_span">不在职权内</span>
