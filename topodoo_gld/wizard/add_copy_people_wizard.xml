<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--定义添加抄送人的表单视图-->
        <record id="syt_oa_gld_add_people_wizard_view" model="ir.ui.view">
            <field name="name">添加工联单抄送人向导</field>
            <field name="model">gld.add.people.wizard</field>
            <field name="arch" type="xml">
                <form string="添加抄送人" version="8.0">
                    <group>
                        <field name="gld_id" invisible='1'/>
                        <field name="copy_suggest" readonly='1'/>
                        <field name="copy_users" string="添加抄送人"/>
                        <field name="copy_declare" width='40%' height="20px;" string="抄送说明"/>
                    </group>
                    <footer>
                        <button name="add_copy_people" string="确定" type="object" class="oe_highlight"/>
                        or
                        <button string="取消" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--定义视图动作-->
        <record model="ir.actions.act_window" id="add_copy_people">
            <field name="name">添加抄送人</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">gld.add.people.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
